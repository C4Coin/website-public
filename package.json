{
  "name": "@c4coin/website-public",
  "version": "1.0.1",
  "description": "The forward-facing website for C4 & EXO coin",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "start": "webpack-dev-server --mode development --devtool cheap-module-eval-source-map",
    "start:build": "http-server ./dist",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "test": "npm run test:unit",
    "test:unit": "mocha-webpack --mode development 'test/**/*_spec.js' --webpack-config webpack.config.test.js",
    "test:unit:cov": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm run test:unit"
  },
  "browserslist": {
    "production": [
      "last 1 version",
      "> 1%"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "branches": 0,
    "include": [
      "web-app/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "babel": {
    "presets": [
      "stage-0",
      "env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/C4Coin/website-public.git"
  },
  "keywords": [
    "C4Coin",
    "C4",
    "EXOCoin",
    "EXO",
    "blockchain",
    "crowdsale"
  ],
  "author": "Sam Grad Oliver <sam.grad.oliver@gmail.com>",
  "contributors": [
    "Dave Sag <davesag@gmail.com>"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/C4Coin/website-public/issues"
  },
  "homepage": "https://github.com/C4Coin/website-public#readme",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "devDependencies": {
    "ajv": "^6.4.0",
    "ajv-keywords": "^3.1.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "dotenv": "^6.0.0",
    "dotenv-webpack": "^1.5.7",
    "ejs-loader": "^0.3.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-mocha": "^4.12.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.2.0",
    "mocha": "^5.1.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "node-sass": "^4.9.2",
    "nyc": "^11.7.0",
    "postcss-loader": "^2.1.4",
    "prettier": "^1.12.0",
    "react-svg-loader": "^2.1.0",
    "sass-color-helpers": "^2.1.1",
    "sass-extract": "^2.1.0",
    "sass-extract-loader": "^1.1.0",
    "sass-loader": "^6.0.7",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.1",
    "webpack-bundle-tracker": "^0.3.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@sanity/block-content-to-react": "^2.0.1",
    "@sanity/client": "^0.132.5",
    "autoprefixer": "^8.6.5",
    "axios": "^0.18.0",
    "camelcase-keys": "^4.2.0",
    "caniuse-lite": "^1.0.30000865",
    "postcss-js": "^2.0.0",
    "prop-types": "^15.6.1",
    "qs": "^6.5.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-ga": "^2.5.0",
    "react-motion": "^0.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-prop-types": "^1.0.3",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.0",
    "rxjs": "^6.2.1",
    "rxjs-compat": "^6.2.1",
    "universal-cookie": "^2.1.5",
    "validator": "^9.4.1"
  }
}

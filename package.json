{
  "name": "@c4coin/website-public",
  "version": "1.0.0",
  "description": "The forward-facing website for C4 & EXO coin",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "start": "webpack-dev-server --mode development --devtool cheap-module-eval-source-map",
    "start:build": "http-server ./dist",
    "build": "webpack --mode production",
    "build:dev": "webpack --config webpack.dev.config.js",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "test": "npm run test:unit",
    "test:unit": "mocha-webpack --mode development 'test/**/*_spec.js' --webpack-config webpack.config.test.js",
    "test:unit:cov": "find ./test/unit -name '*_spec.js' | NODE_ENV=test xargs nyc mocha --require ./test/unit/test_helper.js"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "babel": {
    "presets": [
      "stage-0",
      "env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/C4Coin/website-public.git"
  },
  "keywords": [
    "C4Coin",
    "C4",
    "EXOCoin",
    "EXO",
    "blockchain",
    "crowdsale"
  ],
  "author": "Sam Grad Oliver <sam.grad.oliver@gmail.com>",
  "contributors": [
    "Dave Sag <davesag@gmail.com>"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/C4Coin/website-public/issues"
  },
  "homepage": "https://github.com/C4Coin/website-public#readme",
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "devDependencies": {
    "ajv": "^6.3.0",
    "ajv-keywords": "^3.1.0",
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "css-loader": "^0.28.11",
    "cssnano": "^3.10.0",
    "ejs-loader": "^0.3.1",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-mocha": "^4.12.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.0.7",
    "http-server": "^0.11.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.0.0",
    "mocha": "^5.0.5",
    "mocha-webpack": "^2.0.0-beta.0",
    "node-sass": "^4.7.2",
    "nyc": "^11.6.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "react-svg-loader": "^2.1.0",
    "sass-loader": "^6.0.7",
    "sinon": "^4.4.8",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.2.0",
    "webpack-bundle-tracker": "^0.3.0",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "prop-types": "^15.6.1",
    "qs": "^6.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-ga": "^2.4.1",
    "react-motion": "^0.5.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-prop-types": "^1.0.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.3.0"
  }
}
